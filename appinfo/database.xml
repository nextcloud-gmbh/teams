<database>

	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>

	<table>
		<name>*dbprefix*circles_circles</name>

		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<notnull>true</notnull>
				<autoincrement>true</autoincrement>
				<unsigned>true</unsigned>
				<primary>true</primary>
				<length>4</length>
			</field>

			<field>
				<name>unique_id</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>

			<field>
				<name>name</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>

			<field>
				<name>description</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>128</length>
			</field>

			<field>
				<name>type</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>2</length>
			</field>

			<field>
				<name>creation</name>
				<type>timestamp</type>
			</field>
		</declaration>
	</table>

	<table>
		<name>*dbprefix*circles_members</name>

		<declaration>
			<field>
				<name>circle_id</name>
				<type>integer</type>
				<notnull>true</notnull>
				<unsigned>true</unsigned>
				<length>4</length>
			</field>

			<field>
				<name>user_id</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>

			<field>
				<name>level</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>1</length>
			</field>

			<field>
				<name>status</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>15</length>
			</field>

			<field>
				<name>note</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>255</length>
			</field>

			<field>
				<name>joined</name>
				<type>timestamp</type>
			</field>

			<index>
				<name>unique_membership</name>
				<primary>true</primary>
				<unique>true</unique>
				<field>
					<name>circle_id</name>
				</field>
				<field>
					<name>user_id</name>
				</field>
			</index>
		</declaration>

	</table>

	<table>
		<name>*dbprefix*circles_shares</name>

		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<notnull>true</notnull>
				<autoincrement>true</autoincrement>
				<unsigned>true</unsigned>
				<primary>true</primary>
				<length>4</length>
			</field>

			<field>
				<name>unique_id</name>
				<type>text</type>
				<length>32</length>
			</field>

			<field>
				<name>circle_id</name>
				<type>integer</type>
				<notnull>true</notnull>
				<unsigned>true</unsigned>
				<length>4</length>
			</field>

			<field>
				<name>source</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>15</length>
			</field>

			<field>
				<name>type</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>15</length>
			</field>

			<field>
				<name>author</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>32</length>
			</field>

			<field>
				<name>cloud_id</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>128</length>
			</field>

			<field>
				<name>headers</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>4000</length>
			</field>

			<field>
				<name>payload</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>4000</length>
			</field>

			<field>
				<name>creation</name>
				<type>timestamp</type>
			</field>
		</declaration>
	</table>

	<table>
		<name>*dbprefix*circles_links</name>

		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<notnull>true</notnull>
				<autoincrement>true</autoincrement>
				<unsigned>true</unsigned>
				<primary>true</primary>
				<length>3</length>
			</field>

			<field>
				<name>status</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>1</length>
			</field>

			<field>
				<name>circle_id</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>4</length>
			</field>

			<field>
				<name>unique_id</name>
				<type>text</type>
				<length>64</length>
			</field>

			<field>
				<name>address</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>128</length>
			</field>

			<field>
				<name>token</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>

			<field>
				<name>key</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>

			<field>
				<name>creation</name>
				<type>timestamp</type>
			</field>
		</declaration>
	</table>

</database>